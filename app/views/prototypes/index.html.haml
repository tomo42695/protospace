.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: "presentation"}
          %a{href: "#"} Popular PROTO
        %li{role: "presentation"}
          %a{href: "#"} Newest PROTO
      %button{type: "button", class: "btn btn-default col-lg-1"} View Tags

.container.proto-list
  .row
    - @prototypes.each do |proto|
      .col-sm-4.col-md-3.proto-conent
        .thumbnail
          %a{href: "/prototypes/show"}
            = image_tag(proto.prototype_images.main.first.content)
            .caption
              %h3
              = proto.title
              .proto-meta
                .proto-user
                  = link_to "by #{proto.user.username}", user_path(proto.user)
                .proto-posted
                  = proto.created_at.strftime("%m %d")
              %ul.proto-tag-list.list-inline
                %li
                  %a{href: "#", class: "btn btn-default"} iPad
                %li
                  %a{href: "#", class: "btn btn-default"} wireframe

.text-center
  = paginate(@prototypes)
