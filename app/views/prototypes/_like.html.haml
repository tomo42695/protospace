- if user_signed_in?
  - if prototype.user_liked?(current_user.id)
    = button_to prototype_like_path(like, prototype_id: prototype), method: :delete, id: 'like-button', remote: true do
      = image_tag('icon_red_heart.svg')
      %span
        = prototype.likes_count
  - else
    = button_to prototype_likes_path(prototype), id: 'like-button', remote: true do
      = image_tag('icon_heart.svg')
      %span
        = prototype.likes_count
- else
  = button_to do
    = image_tag('icon_heart.svg')
    %span
      = prototype.likes_count
