.media
  .media-left
    = link_to user_path(comment.user) do
      = image_tag(comment.user.image, style: "width: 64px; height: 64px;")
  .media-body
    %h4#top-aligned-media.media-heading
      = comment.user.username
    = button_to "DELETE", prototype_comment_path(comment, prototype_id: @prototype.id), method: :delete, remote: true
    %p= comment.text
