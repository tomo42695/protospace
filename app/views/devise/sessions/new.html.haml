.container
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f|
    %h2.form-signin-heading Please sign in
    = f.label "Email address", for: "inputEmail", class: "sr-only"
    = f.email_field :email, autofocus: "", placeholder: "Email address", required: "", class: "form-control", id: "inputEmail"
    = f.label "Password", for: "inputPassword", class: "sr-only"
    = f.password_field :password, placeholder: "Password", required: "", class: "form-control", id: "inputPassword"
    - if devise_mapping.rememberable?
      .checkbox
        = f.check_box :remember_me
        = f.label "Remember me"
    = f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"
  .text-center
    %p
      Not a member?
      = link_to "Sign up now", new_user_registration_path

