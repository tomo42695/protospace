= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'container user-new'}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :username, autofocus: true, placeholder: "Username"
          .user-image.col-md-2
            = f.button "Add Image"
            = f.file_field :image, class: "btn btn-primary"
        = f.email_field :email, class: "user-email", placeholder: "E-mail"
        = f.password_field :password, class: "user-password", placeholder: "Password"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholder: "Member"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, cols: "30", rows: "4", placeholder: "Profile"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :work, cols: "30", rows: "4", placeholder: "Works"
    .row.text-center.user-btn
      = f.submit "Save", class: "btn btn-lg btn-primary btn-block"
