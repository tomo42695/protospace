= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            = f.label :Username
            = f.text_field :username, autofocus: true
          .user-image.col-md-2
            = f.label "Add Image"
            = f.file_field :image, class: "btn btn-primary"
        = f.label :email
        = f.email_field :email
        = f.label :password
        = f.password_field :password, autocomplete: "off"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholder: "Member"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_field :profile, cols: "30", rows: "4", placeholder: "Profile"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_field :work, cols: "30", rows: "4", placeholder: "Works"
    .row.text-center.user-btn
      = f.submit "Save", class: "btn btn-lg btn-primary btn-block"
